#------------------------------------------------------------------------------
#
#       GofR-N makefile
#
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# Platform dependent stuff:
#------------------------------------------------------------------------------
 F77 = gfortran 
 F77FLAGS = -O2  
 LIBS = 
 DFLAGS =
 LDFLAGS =
 LD = gfortran
#------------------------------------------------------------------------------

.f.o:
	$(F77) $(F77FLAGS) -c $*.f

 EXECS = RDF

 all : $(EXECS)

 OBJECTS = main.o Parser.o

 
 RDF : $(OBJECTS)
	$(LD) $(DFLAGS) -o RDF $(OBJECTS) $(LDFLAGS)

 clean : 
	rm -f *.o
	rm -f $(EXECS)
