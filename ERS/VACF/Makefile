#------------------------------------------------------------------------------
#
#       VACF makefile
#
#------------------------------------------------------------------------------

#------------------------------------------------------------------------------
# Platform dependent stuff:
#------------------------------------------------------------------------------
 F77 = g77
 F77FLAGS = -O3 
 LIBS =
 DFLAGS =
 LDFLAGS = 
 LD = g77
#------------------------------------------------------------------------------

.f.o:
	$(F77) $(F77FLAGS) -c $*.f

 EXECS = VACF

 all : $(EXECS)

 OBJECTS = VACF.o Parser.o

 VACF : $(OBJECTS)
	$(LD) $(DFLAGS) -o VACF $(OBJECTS) $(LDFLAGS)

 clean :
	rm -f *.o
	rm -f $(EXECS)

